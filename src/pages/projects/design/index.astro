---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import ProjectNavigation from '../../../components/ProjectNavigation.astro';
import { SITE_TITLE } from '../../../consts';

const pageTitle = `Design Projects | ${SITE_TITLE}`;
const pageDescription = 'Catatan proyek desain Yayan Deka: karakter visual, proses, dan aset yang dibangun.';
const designProjects = [
	{
		image: '/images/design-1.png',
		title: 'Pop art design 3d editable text effect',
		href: 'https://www.freepik.com/premium-vector/pop-art-design-3d-editable-text-effect_420791099.htm',
		ctaLabel: 'Lihat di Freepik',
	},
	{
		image: '/images/design-2.png',
		title: 'Vintage style 3d editable text effect',
		href: 'https://www.freepik.com/premium-vector/vintage-style-3d-editable-text-effect_420688784.htm',
		ctaLabel: 'Lihat di Freepik',
	},
	{
		image: '/images/design-3.png',
		title: 'Editable bold motor racing text effect sporty vector typography design',
		href: 'https://www.freepik.com/premium-vector/editable-bold-motor-racing-text-effect-sporty-vector-typography-design_419400102.htm',
		ctaLabel: 'Lihat di Freepik',
	},
];
---

<!doctype html>
<html lang="id">
	<head>
		<BaseHead title={pageTitle} description={pageDescription} />
		<style>
			.project-nav-wrap {
				display: flex;
				justify-content: center;
				margin: 2.5rem 0 3rem;
				flex-wrap: wrap;
			}
			.design-showcase {
				max-width: 1200px;
				margin: 0 auto 4rem;
				padding: 0 1.5rem;
			}
			.design-header {
				margin-bottom: 1.75rem;
			}
			.design-header h2 {
				margin: 0 0 0.75rem;
			}
			.design-gallery {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
				gap: 1.75rem;
			}
			.design-card {
				position: relative;
				overflow: hidden;
				border-radius: 22px;
				background: rgb(15 23 42);
				box-shadow: 0 20px 45px -25px rgb(15 23 42 / 60%);
				transition: transform 160ms ease, box-shadow 160ms ease;
				margin: 0;
			}
			.design-card:hover,
			.design-card:focus-within {
				transform: translateY(-6px);
				box-shadow: 0 28px 55px -25px rgb(15 23 42 / 70%);
			}
			.design-card img {
				width: 100%;
				height: 100%;
				display: block;
				object-fit: cover;
			}
			.design-caption {
				position: absolute;
				inset: auto 0 0 0;
				padding: 1.25rem 1.5rem;
				background: linear-gradient(180deg, rgb(15 23 42 / 0%) 0%, rgb(15 23 42 / 85%) 100%);
				color: rgb(226 232 240);
				font-size: 0.95rem;
				letter-spacing: 0.015em;
			}
			.design-overlay {
				position: absolute;
				inset: 0;
				display: flex;
				align-items: center;
				justify-content: center;
				background: rgb(15 23 42 / 65%);
				backdrop-filter: blur(3px);
				opacity: 0;
				pointer-events: none;
				transition: opacity 180ms ease;
			}
			.design-card:hover .design-overlay,
			.design-card:focus-within .design-overlay {
				opacity: 1;
				pointer-events: auto;
			}
			.design-link {
				display: inline-flex;
				align-items: center;
				gap: 0.4rem;
				padding: 0.6rem 1.4rem;
				border-radius: 999px;
				background: rgb(226 232 240 / 95%);
				color: rgb(15 23 42);
				font-weight: 600;
				text-decoration: none;
				box-shadow: 0 10px 25px -15px rgb(226 232 240);
				transition: background 140ms ease, color 140ms ease;
			}
			.design-link:hover,
			.design-link:focus-visible {
				background: rgb(226 232 240);
				color: rgb(15 23 42);
			}
			.design-link svg {
				width: 18px;
				height: 18px;
			}
			@media (max-width: 768px) {
				.project-nav-wrap {
					margin: 1.5rem 0 2.5rem;
				}
				.design-showcase {
					padding: 0 1rem;
					margin-bottom: 3rem;
				}
				.design-header p {
					font-size: 0.96rem;
				}
			}
			@media (max-width: 520px) {
				.design-gallery {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="project-nav-wrap">
				<ProjectNavigation current="design" />
			</div>

			<div>
				<section class="design-showcase">
					<div class="design-header">
						<h2>Editable Text Effect (EPS Vector File)</h2>
						<p>
							Seri efek teks yang bisa diterapkan untuk berbagai kebutuhan seperti poster, thumbnail, hingga
							sampul media sosial.
						</p>
					</div>
					<div class="design-gallery">
						{designProjects.map((project) => (
							<figure class="design-card">
								<img src={project.image} alt={project.title} loading="lazy" decoding="async" />
								<figcaption class="design-caption">{project.title}</figcaption>
								<div class="design-overlay">
									<a
										class="design-link"
										href={project.href}
										target="_blank"
										rel="noopener noreferrer"
										>
										<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5H21m0 0v7.5m0-7.5L12 13.5" />
											<path stroke-linecap="round" stroke-linejoin="round" d="M21 10.5V19.5A1.5 1.5 0 0 1 19.5 21H4.5A1.5 1.5 0 0 1 3 19.5V4.5A1.5 1.5 0 0 1 4.5 3H13.5" />
										</svg>
										{project.ctaLabel}
									</a>
								</div>
							</figure>
						))}
					</div>
				</section>
			</div>

		</main>
		<Footer />
	</body>
</html>
