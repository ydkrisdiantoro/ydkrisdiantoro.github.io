---
interface Props {
	current: string;
}

const { current } = Astro.props;

const items = [
	{ slug: 'design', label: 'Design' },
	{ slug: 'development', label: 'Development' },
	{ slug: 'writing', label: 'Writing' },
];
---

<div class="projects-navigation" role="group" aria-label="Project categories">
	{items.map((item) => (
		<a
			href={`/projects/${item.slug}`}
			class={`category-btn ${current === item.slug ? 'active' : ''}`}
			aria-current={current === item.slug ? 'page' : undefined}
		>
			{item.label}
		</a>
	))}
</div>

<style>
.projects-navigation {
	width: 100%;;
	display: flex;
	border-radius: 9999px;
	background: rgba(241, 245, 249, 0.64);
	padding: 4px;
	text-transform: uppercase;
	font-size: .75rem;
	font-weight: 600;
}

.category-btn {
	width: 100%;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	padding: 9px 16px;
	color: var(--muted, #475569);
	text-decoration: none;
	background: rgba(255, 255, 255, 0.9);
	border: 1px solid rgba(148, 163, 184, 0.65);
	border-radius: 0;
	transition: background-color .15s ease, color .15s ease, transform .06s ease;
	margin-left: -1px;
}

.category-btn:first-child {
	border-radius: 9999px 0 0 9999px;
	margin-left: 0;
}

.category-btn:last-child {
	border-radius: 0 9999px 9999px 0;
}

.category-btn:hover,
.category-btn:focus {
	background: rgba(226, 232, 240, 0.75);
	color: var(--text, #0f172a);
	outline: none;
}

.category-btn:focus {
	box-shadow: 0 0 0 3px rgba(14, 165, 164, 0.12);
	z-index: 1;
}

.category-btn.active {
	background: var(--accent, #0ea5a4);
	color: #fff;
	font-weight: 600;
	box-shadow: 0 1px 2px rgba(2, 6, 23, 0.12);
	border-color: var(--accent, #0ea5a4);
	z-index: 1;
}
</style>
